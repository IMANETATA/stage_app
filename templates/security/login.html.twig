{% extends 'base.html.twig' %}

{% block title %}{{ 'security.login'|trans }}{% endblock %}

{% block stylesheets%}
 {{ parent() }}
    <style>
        body {
            background-color:rgba(0, 191, 255, 0.2);
        }
		  </style>
{% endblock %}
{% block body %}

<div class="container" style="margin-top: 8rem;" >
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 text-center" >
                            <img src="{{ asset('build/images/draw2.webp') }}" class="img-fluid" alt="Sample image">
                        </div>
                        <div class="col-md-6">
                            <form method="post">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                <div class="form-group">
                                    <div style="width:100%;text-align:center">
                                        {% include 'changeLangue.html.twig' %}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="inputEmail">{{ 'security.email'|trans }}</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="{{ 'security.email'|trans }}" required autofocus>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="inputPassword">{{ 'security.password'|trans }}</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-lock" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'security.password'|trans }}" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="form2Example3">
                                        <label class="form-check-label" for="form2Example3">
                                            {{ 'security.remember-me'|trans }}
                                        </label> <br>
										<a href="{{path('app_forgot_password_request')}}" class="text-body">
									<i class="fa fa-question-circle" aria-hidden="true"></i>
									{{'security.forgetten-password'|trans}}</a>
                                    </div>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary mt-4">
                                        <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
                                        {{ 'security.login'|trans }}
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
