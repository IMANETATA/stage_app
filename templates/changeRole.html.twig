<style>
#listeRoles {

         margin:auto;
         margin-top:30px;
}

</style>
{% set roles = app.user.getroles(TRUE) %}
{% if roles|length > 1 %}
    <select id="listeRoles">
        {% for a in roles %}
            {% if a != 'ROLE_USER' %}
                <option value="{{ a }}" {% if a == app.session.get('_role')%} selected {%endif%}>{{ a|trans }}</option>
            {% endif %}
        {% endfor %}
    </select>
{% endif %}	
{% block javascripts %}
     {{ encore_entry_script_tags('roles') }}
{% endblock %}
